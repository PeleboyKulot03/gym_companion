<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/program"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bench_press"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/note_lorem_ipsum_dollor_amet_simet_shfjakhfyjh_f_asjkhfajskfsa"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/sets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_set"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:background="@drawable/round_edit_text"
                        android:padding="10dp"
                        />

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/reps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_reps"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:background="@drawable/round_edit_text"
                        android:backgroundTint="#303A51"
                        android:padding="10dp"
                        />
                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/weights"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_weight"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:background="@drawable/round_edit_text"
                        android:backgroundTint="@color/lightPrimary"
                        android:padding="10dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weight_lifting"
                android:contentDescription="@string/icon" />

            </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>