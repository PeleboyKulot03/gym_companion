<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/image"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/program"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bench_press"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note_lorem_ipsum_dollor_amet_simet_shfjakhfyjh_f_asjkhfajskfsa"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="10dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/sets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_set"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:background="@drawable/round_edit_text"
                            android:padding="10dp"
                            />

                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/reps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_reps"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:background="@drawable/round_edit_text"
                            android:backgroundTint="@color/lightPrimary"
                            android:padding="10dp"
                            />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/weights"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_weight"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:background="@drawable/round_edit_text"
                            android:backgroundTint="@color/lightPrimary"
                            android:padding="10dp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/image"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/weight_lifting"
                    android:contentDescription="@string/icon"
                    android:scaleType="centerCrop"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_weight="0"
                android:id="@+id/finishInfos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/lightPrimary"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/accuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_accuracy"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/timeSpent"
                    android:layout_width="match_parent"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_time_spent"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>