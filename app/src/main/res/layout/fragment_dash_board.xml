<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.homepage.fragments.DashBoardFragment"
    android:scrollbars="none"
    android:background="@color/lightPrimary"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/dashboard"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/dateFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/date_prompt"
            android:background="@drawable/selector_border"
            android:padding="10dp"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:drawablePadding="5dp"
            app:drawableEndCompat="@drawable/baseline_keyboard_arrow_down_24" />


        <androidx.recyclerview.widget.RecyclerView
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/horizontalRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateFilter"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/verticalRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizontalRecyclerView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>




</ScrollView>